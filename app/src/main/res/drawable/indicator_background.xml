<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>                                                                 <!-- 모양 정의 (사각형 / 타원 / 선 / 링 ) , 링 일경우 다른 속성 추가 가능 -->
            <size android:width="8dp" />                                               <!-- 크기지정 -->
<!--            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>       &lt;!&ndash; 패딩 지정 가능 &ndash;&gt;-->
            <solid android:color="@android:color/holo_red_dark"/>                                          <!-- 모양 색 채우기 -->
            <corners android:radius="8dp" />                                                               <!-- 가장자리 처리 (위, 아래 , 양 옆 따로지정 가능) -->
            <stroke android:color="@color/black" android:width="1dp"/>                                   <!--테두리 지정 -->
            <!--            <gradient/>-->                                                                 <!-- 그라데이션 지정 가능하지만 사용하지 않고 있음 -->
        </shape>
    </item>
    <item android:state_accelerated="false">
        <shape>                                                                 <!-- 모양 정의 (사각형 / 타원 / 선 / 링 ) , 링 일경우 다른 속성 추가 가능 -->
            <size android:width="80dp" />                                               <!-- 크기지정 -->
<!--            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>       &lt;!&ndash; 패딩 지정 가능 &ndash;&gt;-->
            <solid android:color="#fe6b8d"/>                                      <!-- 모양 색 채우기 -->
            <corners android:radius="8dp" />                                                               <!-- 가장자리 처리 (위, 아래 , 양 옆 따로지정 가능) -->
            <stroke android:color="@color/black" android:width="1dp"/>                                   <!--테두리 지정 -->
            <!--            <gradient/>-->                                                                 <!-- 그라데이션 지정 가능하지만 사용하지 않고 있음 -->
        </shape>
    </item>
</selector>




